<?xml version="1.0"?>

<PropertyList>
  <nopreview/>

   <name>ExternalFlame</name>
   <path>Aircraft/JA37/Models/Effects/engine/externalflame.ac</path>

   <offsets> 
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
    <heading-deg>0</heading-deg>
   </offsets>
   
  <effect>
   <inherits-from>Effects/model-transparent</inherits-from>
   <object-name>ExternalFlamePoly</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <object-name>ExternalFlamePoly</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ExternalFlamePoly</object-name>
    <nopreview/>
    <condition>
      <property>engines/engine/augmentation</property>
      <not><property>engines/engine-is-reversed</property></not>
      <not><property>/sim/rendering/shaders/skydome</property></not><!-- als -->
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>ExternalFlamePoly</object-name>
    <nopreview/>
    <property>sim/multiplay/generic/float[3]</property><!-- fdm/jsbsim/propulsion/engine/aug-flame --> 
    <x-min>0.2</x-min>
    <y-min>1.325</y-min>
    <z-min>1.325</z-min>
    <x-factor>1.2</x-factor>
    <y-factor>1.0</y-factor>
    <z-factor>1.0</z-factor>
  </animation>

  <animation>
  <type>rotate</type>
  <object-name>ExternalFlamePoly</object-name>
  <property>/sim/time/elapsed-sec</property>
  <factor>2000</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>blend</type>
  <object-name>ExternalFlamePoly</object-name>
  <property>/sim/multiplay/generic/float[2]</property><!-- sun angle from nasal -->
  <factor>1.0</factor>
  <min>0.60</min>
  <max>0.95</max>
 </animation>

</PropertyList>
