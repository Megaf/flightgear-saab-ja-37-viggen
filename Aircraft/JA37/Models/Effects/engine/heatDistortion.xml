<?xml version="1.0"?>

<PropertyList>
  <nopreview/>

   <name>HeatDistortion</name>
   <path>heatDistortion.ac</path>

   <offsets> 
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
    <heading-deg>0</heading-deg>
   </offsets>
   
  <effect>
   <inherits-from>Aircraft/JA37/Models/Effects/engine/heatDistortion</inherits-from>
   <object-name>Bounding_box</object-name>
  </effect>
  
  <animation>
    <type>noshadow</type>
    <object-name>Bounding_box</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Bounding_box</object-name>
    <nopreview/>
    <condition>
     <greater-than>
       <property>/sim/rendering/shaders/model</property>
       <value>0</value>
     </greater-than>
     <property>/sim/rendering/shaders/skydome</property>
     <not>
       <property>sim/multiplay/generic/bool[11]</property><!-- engines/engine/is-reversed -->
     </not>
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>Bounding_box</object-name>
    <nopreview/>
    <property>/velocities/airspeed-kt-inv</property>
    <x-min>2.5</x-min>
    <y-min>2.5</y-min>
    <z-min>2.5</z-min>
    <x-max>2.5</x-max>
    <y-max>10</y-max>
    <z-max>10</z-max>
    <x-factor>10</x-factor>
    <y-factor>10</y-factor>
    <z-factor>10</z-factor>
  </animation>

    <!---->

</PropertyList>
