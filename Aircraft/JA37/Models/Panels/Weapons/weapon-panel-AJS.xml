<?xml version="1.0"?>

<PropertyList>
  <path>weapon-panel-AJS.ac</path>

  <!-- materials -->
  <effect>
    <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
    <object-name>panel</object-name>
    <object-name>button_jett</object-name>
    <object-name>button_tank</object-name>
    <object-name>knob_dist_disc</object-name>
    <object-name>knob_dist_handle</object-name>
    <object-name>knob_dist_screw</object-name>
    <object-name>knob_weapon_disc</object-name>
    <object-name>knob_weapon_handle</object-name>
    <object-name>knob_weapon_screw</object-name>
    <object-name>switch_enkel</object-name>
    <object-name>switch_impuls</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
    <object>button_jett_cover</object>
    <object>button_tank_cover</object>
  </effect>

  <!-- knobs -->
  <animation>
    <type>knob</type>
    <object-name>knob_weapon_disc</object-name>
    <object-name>knob_weapon_handle</object-name>
    <object-name>knob_weapon_screw</object-name>
    <property>controls/armament/weapon-panel/selector-knob</property>
    <factor>30</factor>
    <center>
      <x-m>-0.033025</x-m>
      <y-m>0.008504</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/armament/weapon-panel/selector-knob</property>
        <min>0</min>
        <max>5</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>weapon-selector</tooltip-id>
        <label>Weapon selector</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>knob_dist_disc</object-name>
    <object-name>knob_dist_handle</object-name>
    <object-name>knob_dist_screw</object-name>
    <property>controls/armament/weapon-panel/dist-knob</property>
    <factor>30</factor>
    <center>
      <x-m>0.026987</x-m>
      <y-m>0.008504</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/armament/weapon-panel/dist-knob</property>
        <min>0</min>
        <max>10</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>dist-selector</tooltip-id>
        <label>Bomb interval / wingspan</label>
      </binding>
    </hovered>
  </animation>

  <!-- switches -->
  <animation>
    <type>rotate</type>
    <object-name>switch_impuls</object-name>
    <property>controls/armament/weapon-panel/switch-impulse</property>
    <factor>40</factor>
    <offset-deg>-20</offset-deg>
    <center>
      <x-m>0</x-m>
      <y-m>0.015697</y-m>
      <z-m>-0.001491</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>switch_impuls_pick_bot</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>controls/armament/weapon-panel/switch-impulse</property>
        <value>1</value>
      </binding>
      <binding>
        <command>nasal</command>
        <script>ja37.click();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>switch_impuls_pick_top</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>controls/armament/weapon-panel/switch-impulse</property>
        <value>0</value>
      </binding>
      <binding>
        <command>nasal</command>
        <script>ja37.click();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>switch_impuls_pick_bot</object-name>
    <object-name>switch_impuls_pick_top</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>impuls-switch</tooltip-id>
        <label>Rb 04/15 single / double release; ARAK long range mode</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>switch_enkel</object-name>
    <property>controls/armament/weapon-panel/switch-single</property>
    <factor>40</factor>
    <offset-deg>-20</offset-deg>
    <center>
      <x-m>0</x-m>
      <y-m>0.015697</y-m>
      <z-m>-0.001491</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>switch_enkel_pick_bot</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>controls/armament/weapon-panel/switch-single</property>
        <value>1</value>
      </binding>
      <binding>
        <command>nasal</command>
        <script>ja37.click();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>switch_enkel_pick_top</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>controls/armament/weapon-panel/switch-single</property>
        <value>0</value>
      </binding>
      <binding>
        <command>nasal</command>
        <script>ja37.click();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>switch_enkel_pick_bot</object-name>
    <object-name>switch_enkel_pick_top</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>enkel-switch</tooltip-id>
        <label>Rb 04/15 seeker settings (not implemented)</label>
      </binding>
    </hovered>
  </animation>

  <!-- buttons -->
  <animation>
    <type>rotate</type>
    <object-name>button_tank_cover</object-name>
    <property>controls/armament/weapon-panel/jett-tank-cover</property>
    <factor>70</factor>
    <center>
      <x-m>-0.100634</x-m>
      <y-m>0</y-m>
      <z-m>0.006061</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>button_tank_cover</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/armament/weapon-panel/jett-tank-cover</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>button_tank</object-name>
    <property>controls/armament/weapon-panel/jett-tank</property>
    <factor>0.0015</factor>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>button_tank</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <condition><property>controls/armament/weapon-panel/jett-tank-cover</property></condition>
        <command>property-assign</command>
        <property>controls/armament/weapon-panel/jett-tank</property>
        <value>1</value>
      </binding>
      <binding>
        <condition><property>controls/armament/weapon-panel/jett-tank-cover</property></condition>
        <command>nasal</command>
        <script>pylons.jettison_tank(); ja37.click();</script>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>controls/armament/weapon-panel/jett-tank</property>
          <value>0</value>
        </binding>
      </mod-up>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>button_tank</object-name>
    <object-name>button_tank_cover</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>jettison_tank</tooltip-id>
        <label>Jettison drop tank</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>button_jett_cover</object-name>
    <property>controls/armament/weapon-panel/jett-weapon-cover</property>
    <factor>70</factor>
    <center>
      <x-m>-0.117023</x-m>
      <y-m>0</y-m>
      <z-m>0.006061</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>button_jett_cover</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/armament/weapon-panel/jett-weapon-cover</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>button_jett</object-name>
    <property>controls/armament/weapon-panel/jett-weapon</property>
    <factor>0.0015</factor>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>button_jett</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <condition><property>controls/armament/weapon-panel/jett-weapon-cover</property></condition>
        <command>property-assign</command>
        <property>controls/armament/weapon-panel/jett-weapon</property>
        <value>1</value>
      </binding>
      <binding>
        <condition><property>controls/armament/weapon-panel/jett-weapon-cover</property></condition>
        <command>nasal</command>
        <script>pylons.jettison_stores(); ja37.click();</script>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>controls/armament/weapon-panel/jett-weapon</property>
          <value>0</value>
        </binding>
      </mod-up>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>button_jett</object-name>
    <object-name>button_jett_cover</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>jettison_all</tooltip-id>
        <label>Jettison external load</label>
      </binding>
    </hovered>
  </animation>

  <!-- swedish textures -->
  <animation>
    <type>material</type>
    <object-name>panel</object-name>
    <object-name>button_jett</object-name>
    <object-name>button_tank</object-name>
    <object-name>knob_dist_disc</object-name>
    <object-name>knob_weapon_disc</object-name>
    <condition><property>/ja37/effect/swedish-labels</property></condition>
    <texture>weapon-panel-AJS-se.png</texture>
  </animation>

  <animation>
    <type>material</type>
    <object-name>button_jett_cover</object-name>
    <object-name>button_tank_cover</object-name>
    <condition><property>/ja37/effect/swedish-labels</property></condition>
    <texture>button_covers-se.png</texture>
  </animation>
</PropertyList>
