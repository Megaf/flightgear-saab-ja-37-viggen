<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  <path>radio.ac</path>

  <effect>
    <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
    <object-name>Mount</object-name>
    <object-name>leftMacroKnob</object-name>
    <object-name>leftMicroKnob</object-name>
    <object-name>rightMacroKnob</object-name>
    <object-name>rightMicroKnob</object-name>
    <object-name>switch</object-name>
    <object-name>switchBase</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/JA37/Models/Effects/ja37-gauge</inherits-from>
    <object-name>1sFreq</object-name>
    <object-name>10sFreq</object-name>
    <object-name>100sFreq</object-name>
    <object-name>1000sFreq</object-name>
    <object-name>10000sFreq</object-name>
    <object-name>100000sFreq</object-name>
    <object-name>decimalFreq</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>1sFreq</object-name>
    <object-name>10sFreq</object-name>
    <object-name>100sFreq</object-name>
    <object-name>1000sFreq</object-name>
    <object-name>10000sFreq</object-name>
    <object-name>100000sFreq</object-name>
    <object-name>decimalFreq</object-name>
    <emission>
      <red-prop>instrumentation/instrumentation-light/r</red-prop>
      <green-prop>instrumentation/instrumentation-light/g</green-prop>
      <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>Mount</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>freq-selector</tooltip-id>
        <label>Comm radio frequency selector</label>
      </binding>
    </hovered>
  </animation>

  <!-- knobs -->

  <animation>
    <type>knob</type>
    <object-name>leftMicroKnob</object-name>
    <property>instrumentation/fr22/frequency-10mhz</property>
    <factor>36</factor>
    <center>
      <x-m>0</x-m>
      <y-m>-0.02448</y-m>
      <z-m>-0.01048</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <!-- 103 to 399 MHz -->
        <property>instrumentation/fr22/frequency-10mhz</property>
        <min>10</min>
        <max>39</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>freq-10mhz</tooltip-id>
        <label>Frequency (10MHz)</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>leftMacroKnob</object-name>
    <property>instrumentation/fr22/frequency-1mhz</property>
    <factor>36</factor>
    <center>
      <x-m>0</x-m>
      <y-m>-0.02448</y-m>
      <z-m>-0.01048</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/fr22/frequency-1mhz</property>
        <min>0</min>
        <max>10</max>
        <wrap>true</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>freq-1mhz</tooltip-id>
        <label>Frequency (1MHz)</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>rightMacroKnob</object-name>
    <property>instrumentation/fr22/frequency-100khz</property>
    <factor>36</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0.02448</y-m>
      <z-m>-0.01048</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/fr22/frequency-100khz</property>
        <min>0</min>
        <max>10</max>
        <wrap>true</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>freq-100khz</tooltip-id>
        <label>Frequency (100KHz)</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>rightMicroKnob</object-name>
    <property>instrumentation/fr22/frequency-1khz</property>
    <factor>3.6</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0.02448</y-m>
      <z-m>-0.01048</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/fr22/frequency-1khz</property>
        <min>0</min>
        <max>100</max>
        <factor>25</factor>
        <wrap>true</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>freq-1mhz</tooltip-id>
        <label>Frequency (25KHz)</label>
      </binding>
    </hovered>
  </animation>

  <!-- display -->

  <animation>
    <type>textranslate</type>
    <object-name>100000sFreq</object-name>
    <property>instrumentation/fr22/frequency-10mhz</property>
    <factor>0.01</factor>
    <step>10</step>
    <axis>
      <x>1</x>
      <y>0</y>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>10000sFreq</object-name>
    <property>instrumentation/fr22/frequency-10mhz</property>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>1</x>
      <y>0</y>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>1000sFreq</object-name>
    <property>instrumentation/fr22/frequency-1mhz</property>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>1</x>
      <y>0</y>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>100sFreq</object-name>
    <property>instrumentation/fr22/frequency-100khz</property>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>1</x>
      <y>0</y>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>10sFreq</object-name>
    <property>instrumentation/fr22/frequency-1khz</property>
    <factor>0.01</factor>
    <step>10</step>
    <axis>
      <x>1</x>
      <y>0</y>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>1sFreq</object-name>
    <property>instrumentation/fr22/frequency-1khz</property>
    <factor>0.1</factor>
    <step>1</step>
    <axis>
      <x>1</x>
      <y>0</y>
    </axis>
  </animation>

  <!-- switch -->
  <animation>
    <type>pick</type>
    <object-name>switch</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>instrumentation/fr22/am</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>ja37.click()</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>fm-am</tooltip-id>
        <label>FM/AM (not implemented)</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>switch</object-name>
    <property>instrumentation/fr22/am</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <center>
      <x-m>0.011</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
</PropertyList>
