<?xml version="1.0"?>

<PropertyList>

    <path>subHUD.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>subHUD</object-name>
        <object-name>knobHeadSI</object-name>
        <object-name>knobBaseSI</object-name>
        <object-name>knobHeadRES</object-name>
        <object-name>knobBaseRES</object-name>
    </effect>

    <animation>
        <type>knob</type>
        <object-name>knobHeadSI</object-name>
        <object-name>knobBaseSI</object-name>
        <property>ja37/hud/brightness-si</property>
        <factor>-240</factor>
        <offset-deg>212</offset-deg>
        <center>
            <x-m> -4.0 </x-m>
            <y-m> -0.03 </y-m>
            <z-m> 0.45902 </z-m>
        </center>
        <axis>
            <x> 1.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>ja37/hud/brightness-si</property>
                <factor>0.05</factor>
                <min>0.55</min>
                <max>1.00</max>                
                <wrap>false</wrap>
           </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>knob-hud-brightness</tooltip-id>
                <label>HUD brightness</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>knobHeadRES</object-name>
        <object-name>knobBaseRES</object-name>
        <property>ja37/hud/brightness-res</property>
        <factor>-120</factor>
        <offset-deg>80</offset-deg>
        <center>
            <x-m> -4.0 </x-m>
            <y-m>  0.03 </y-m>
            <z-m> 0.45902 </z-m>
        </center>
        <axis>
            <x> 1.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>ja37/hud/brightness-res</property>
                <factor>0.10</factor>
                <min>0.00</min>
                <max>0.90</max>                
                <wrap>false</wrap>
           </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>knob-hud-brightness-res</tooltip-id>
                <label>HUD Backup brightness</label>
            </binding>
        </hovered>
    </animation>
</PropertyList>
