<?xml version="1.0"?>

<PropertyList>

    <path>switch-a.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>switchMount</object-name>
        <object-name>switchRed</object-name>
        <object-name>switchLever</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>switchMount</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>switch-radar</tooltip-id>
                <label>Radar</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>pickTop</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>nasal</command>
                <script>if(getprop("ja37/hud/tracks-enabled")==1) {radar_logic.ecmLog.push("Radar switched silent.");ja37.click();}</script>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>ja37/hud/tracks-enabled</property>
                <value>0</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>pickBottom</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>nasal</command>
                <script>if(getprop("ja37/hud/tracks-enabled")==0) {radar_logic.ecmLog.push("Radar switched active.");ja37.click();}</script>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>ja37/hud/tracks-enabled</property>
                <value>1</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>switchLever</object-name>
        <property>ja37/hud/tracks-enabled</property>
        <factor>40</factor>
        <offset-deg>-20</offset-deg>
        <center>
            <x-m>  0.00 </x-m>
            <y-m>  0.00 </y-m>
            <z-m> -0.00608 </z-m>
        </center>
        <axis>
            <x> 1.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <animation>
        <type>material</type>
        <object-name>switchMount</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>switch-light-flash</texture-prop>
        <texture>RADAR.png</texture>
    </animation>

</PropertyList>
