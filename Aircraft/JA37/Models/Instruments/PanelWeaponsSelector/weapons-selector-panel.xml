<?xml version="1.0"?>

<PropertyList>

    <path>knob-g.ac</path>

    <!-- this panel is not added, since its for right equipment bay, found out after I made it.. -->

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>knob</object-name>
        <object-name>plane</object-name>
        <object-name>MountLight.000</object-name>
        <object-name>MountLight.001</object-name>
        <object-name>MountLight.002</object-name>
        <object-name>MountLight.003</object-name>
        <object-name>MountLight.004</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>Light.000</object-name>
        <emission>
            <red>0</red>
            <green>0</green>
            <blue>1</blue>
            <factor-prop>ja37/armament/reset</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Light.001</object-name>
        <emission>
            <red>0</red>
            <green>1</green>
            <blue>0</blue>
            <factor-prop>ja37/armament/control</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Light.004</object-name>
        <emission>
            <red>0</red>
            <green>1</green>
            <blue>0</blue>
            <factor-prop>ja37/armament/slid</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Light.002</object-name>
        <object-name>Light.003</object-name>
        <emission>
            <red>1</red>
            <green>0</green>
            <blue>0</blue>
            <factor-prop>ja37/armament/akan-armed</factor-prop>
        </emission>
    </animation>

    <!-- switch -->

    <animation>
        <type>pick</type>
        <object-name>Switch</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-toggle</command>
              <property>ja37/armament/master-arm</property>
            </binding>
            <binding>
                <command>nasal</command>
                <script>ja37.click();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>switch-masterarm</tooltip-id>
                <label>Master arm</label>
                <property>ja37/armament/master-arm</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Switch</object-name>
        <property>ja37/armament/master-arm</property>
        <factor>70</factor>
        <offset-deg>-35</offset-deg>
        <center>
            <x-m> -0.03441 </x-m>
            <y-m> -0.02527 </y-m>
            <z-m> 0.00003 </z-m>
        </center>
        <axis>
            <x> 1.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <!-- knob -->

    <animation>
        <type>pick</type>
        <object-name>plane</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>pws</tooltip-id>
                <label>Weapons Selector Panel</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>pickRight</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-adjust</command>
                <property>ja37/armament/attack-selector</property>
                <step>0.05</step>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>pickLeft</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-adjust</command>
                <property>ja37/armament/attack-selector</property>
                <step>-0.05</step>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>knob</object-name>
        <property>ja37/armament/attack-selector</property>
        <factor>270</factor>
        <offset-deg>-135</offset-deg>
        <center>
            <x-m>  0.00467 </x-m>
            <y-m>  -0.02421 </y-m>
            <z-m>  0.0015 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </axis>
    </animation>

</PropertyList>
