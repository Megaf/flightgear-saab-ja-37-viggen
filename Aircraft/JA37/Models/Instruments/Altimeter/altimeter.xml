<?xml version="1.0"?>

<PropertyList>

    <path>altimeter.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glassAlt1</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>Cube</object-name>
    </effect>
    
    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-gauge</inherits-from>
        <object-name>Hundred_meter_hand</object-name>
        <object-name>km_hand</object-name>
        <object-name>Dig1000</object-name>
        <object-name>Dig100</object-name>
        <object-name>Dig10</object-name>
        <object-name>Dig1</object-name>
        <object-name>Dig0.1</object-name>
        <object-name>DigSTD</object-name>
        <object-name>Face</object-name>
        <object-name>knob</object-name>
        <object-name>off</object-name>
    </effect>
    
    <animation>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <not>
                <property>ja37/elec/dc-bus-main-bool</property>
            </not>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Cube</object-name>
        <object-name>glassAlt1</object-name>
        <hovered>
            <binding>
                <condition>
                    <property>ja37/elec/dc-bus-main-bool</property>
                </condition>
                <command>set-tooltip</command>
                <tooltip-id>altitude</tooltip-id>
                <label>%s</label> <!-- Only one parameter is supported here -->
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <mapping>nasal</mapping>
                <script>
                    return sprintf("Altitude: %d ft / %d m",
                                   getprop("/instrumentation/altimeter/indicated-altitude-ft"),
                                   getprop("/instrumentation/altimeter/indicated-altitude-meter"));
                </script>
            </binding>
        </hovered>
    </animation>

    <!--<animation>
        <type>material</type>
        <object-name>Cube</object-name>
        <condition>
            <greater-than>
                <property>/sim/time/sun-angle-rad</property>
                <value>1.57</value>
            </greater-than>
        </condition>
        <emission>
            <red>0.15</red>
            <green>0.03</green>
            <blue>0.03</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>-->

    <animation>
        <type>material</type>
        <object-name>Hundred_meter_hand</object-name>
        <object-name>km_hand</object-name>
        <object-name>Dig1000</object-name>
        <object-name>Dig100</object-name>
        <object-name>Dig10</object-name>
        <object-name>Dig1</object-name>
        <object-name>Dig0.1</object-name>
        <object-name>DigSTD</object-name>
        <object-name>Face</object-name>
        <object-name>knob</object-name>
        <object-name>off</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Hundred_meter_hand</object-name>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <property>/instrumentation/altimeter/indicated-altitude-meter</property>
        <factor>0.36</factor>
        <center>
            <x-m>0.0</x-m>
            <y-m>-0.00316</y-m>
            <z-m>0.0139</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>km_hand</object-name>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <property>/instrumentation/altimeter/indicated-altitude-meter</property>
        <factor>0.036</factor>
        <center>
            <x-m>0.0</x-m>
            <y-m>-0.00316</y-m>
            <z-m>0.0139</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <!-- Pressure Display -->
    <animation>
        <type>select</type>
        <object-name>Dig1000</object-name>
        <object-name>Dig100</object-name>
        <object-name>Dig10</object-name>
        <object-name>Dig1</object-name>
        <object-name>Dig0.1</object-name>
        <condition>
            <not><property>/instrumentation/altimeter/setting-std</property></not>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>DigSTD</object-name>
        <condition>
            <property>/instrumentation/altimeter/setting-std</property>
        </condition>
    </animation>
        
    <animation>
        <type>textranslate</type>
        <object-name>Dig1000</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Dig100</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Dig10</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Dig1</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Dig0.1</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>1</factor>
        <step>0.1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <!--             Altimeter setting       -->
    <animation>
        <type>knob</type>
        <condition>
            <not><property>/instrumentation/altimeter/setting-std</property></not>
        </condition>
        <object-name>knobPick</object-name>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-hpa</property>
                <factor>0.5</factor>
                <min>500.0</min>
                <max>1130.0</max>
                <wrap>false</wrap>
           </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>altimeter-setting</tooltip-id>
                <label>Baro setting: %6.1f hPa</label>
                <property>/instrumentation/altimeter/setting-hpa</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <condition>
            <not><property>/instrumentation/altimeter/setting-std</property></not>
        </condition>
        <object-name>knob</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>4</factor>
        <center>
          <x-m>0.0</x-m>
          <y-m>-0.03966</y-m>
          <z-m>-0.03687</z-m>
        </center>
        <axis>
          <x>-1</x>
          <y>0</y>
          <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>knob</object-name>
        <action>
            <name>STD pressure</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/instrumentation/altimeter/setting-std</property>
            </binding>
            <binding>
                <condition>
                    <property>/instrumentation/altimeter/setting-std</property>
                </condition>
                <command>property-assign</command>
                <property>/instrumentation/altimeter/setting-hpa-saved</property>
                <property>/instrumentation/altimeter/setting-hpa</property>
            </binding>
            <binding>
                <condition>
                    <property>/instrumentation/altimeter/setting-std</property>
                </condition>
                <command>property-assign</command>
                <property>/instrumentation/altimeter/setting-hpa</property>
                <value>1013</value>
            </binding>
            <binding>
                <condition>
                    <not><property>/instrumentation/altimeter/setting-std</property></not>
                </condition>
                <command>property-assign</command>
                <property>/instrumentation/altimeter/setting-hpa</property>
                <property>/instrumentation/altimeter/setting-hpa-saved</property>
            </binding>
            <binding>
                <command>nasal</command>
                <script>ja37.click()</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>altimeter-std</tooltip-id>
                <label>Toggle STD pressure</label>
            </binding>
        </hovered>
    </animation>
</PropertyList>
