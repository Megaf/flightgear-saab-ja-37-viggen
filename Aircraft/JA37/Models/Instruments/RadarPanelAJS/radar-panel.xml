<?xml version="1.0"?>

<PropertyList>
  <path>radar-panel.ac</path>

  <effect>
    <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
    <object-name>base</object-name>
    <object-name>knob_mode</object-name>
    <object-name>knob_filter</object-name>
    <object-name>switch_sea</object-name>
    <object-name>switch_lin</object-name>
    <object-name>switch_pulse</object-name>
    <object-name>switch_passive</object-name>
    <object-name>button_rr</object-name>
  </effect>

  <animation>
    <type>pick</type>
    <object-name>base</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>rdpn</tooltip-id>
        <label>Radar panel</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>knob_mode</object-name>
    <property>ja37/mode/selector-ajs</property>
    <factor>30</factor>
    <center>
      <x-m>-0.067702</x-m>
      <y-m>-0.030824</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/mode/selector-ajs</property>
        <min>0</min>
        <max>6</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>mode-selector</tooltip-id>
        <label>Main mode selector</label>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>knob_filter</object-name>
    <property>ja37/radar/panel/filter</property>
    <factor>30</factor>
    <center>
      <x-m>0.065625</x-m>
      <y-m>-0.035529</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/filter</property>
        <min>0</min>
        <max>7</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>switch_sea</object-name>
    <property>ja37/radar/panel/sea</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <drag-direction>vertical</drag-direction>
    <center>
      <x-m>-0.068158</x-m>
      <y-m>0.016052</y-m>
      <z-m>0.003</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/sea</property>
        <min>0</min>
        <max>1</max>
        <factor>-1</factor>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>switch_lin</object-name>
    <property>ja37/radar/panel/linear</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <drag-direction>vertical</drag-direction>
    <center>
      <x-m>-0.02042</x-m>
      <y-m>-0.012922</y-m>
      <z-m>0.003</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/linear</property>
        <min>0</min>
        <max>1</max>
        <factor>-1</factor>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>switch_pulse</object-name>
    <property>ja37/radar/panel/pulse</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <drag-direction>vertical</drag-direction>
    <center>
      <x-m>-0.02042</x-m>
      <y-m>-0.039292</y-m>
      <z-m>0.003</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/pulse</property>
        <min>0</min>
        <max>1</max>
        <factor>-1</factor>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>switch_passive</object-name>
    <property>ja37/radar/panel/passive</property>
    <factor>60</factor>
    <offset-deg>-30</offset-deg>
    <drag-direction>vertical</drag-direction>
    <center>
      <x-m>0.019383</x-m>
      <y-m>-0.039292</y-m>
      <z-m>0.003</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>ja37/radar/panel/passive</property>
        <min>0</min>
        <max>1</max>
        <factor>-1</factor>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>button_rr</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-assign</command>
        <property>ja37/radar/panel/rr-button</property>
        <value>1</value>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>ja37/radar/panel/rr-button</property>
          <value>0</value>
        </binding>
      </mod-up>
    </action>
  </animation>
  <animation>
    <type>translate</type>
    <object-name>button_rr</object-name>
    <property>ja37/radar/panel/rr-button</property>
    <factor>0.003</factor>
    <axis>
      <z>-1</z>
    </axis>
  </animation>
</PropertyList>
