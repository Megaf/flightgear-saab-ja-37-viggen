<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

    <path>panel-volume.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>Panel</object-name>
        <object-name>knob-ir</object-name>
        <object-name>knob-volume</object-name>
        <object-name>mount-ir</object-name>
        <object-name>panel</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>knob-ir</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/stores/ir-rb-button</property>
                <value>1</value>
            </binding>
            <binding>
                <command>nasal</command>
                <script>fire_control.cycle_weapon(); ja37.click();</script>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/stores/ir-rb-button</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>knob-irrb</tooltip-id>
                <label>Sidewinder quick select</label>
            </binding>
        </hovered>
    </animation>
    
    <animation>
       <type>translate</type>
       <object-name>knob-ir</object-name>
       <property>ja37/stores/ir-rb-button</property>
       <factor>0.003</factor>
       <offset-m>0</offset-m>
       <axis>
         <z>-1</z>
       </axis>
       <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>knob-volume</object-name>
        <property>ja37/sound/helmet</property>
        <factor>90</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>  0.00 </x-m>
            <y-m>  0.0375 </y-m>
            <z-m>  0.00 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z> -1.0 </z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>ja37/sound/helmet</property>
                <factor>0.1</factor>
                <min>0</min>
                <max>1</max>           
                <wrap>false</wrap>
           </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>knob-vol</tooltip-id>
                <label>Missile lock/search volume</label>
            </binding>
        </hovered>
    </animation>

</PropertyList>
