<?xml version="1.0"?>
<PropertyList>

    <path>ai1.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glassAI1</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>ai-ring</object-name>
        <object-name>CLOCK_mount</object-name>
    </effect>
    
    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-gauge</inherits-from>
        <object-name>sphere</object-name>
        <object-name>bank-index</object-name>
        <object-name>off</object-name>
        <object-name>level</object-name>
        <object-name>headingIndicator</object-name>
        <object-name>glideslopeIndicator</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>sphere</object-name>
        <object-name>bank-index</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Primary Attitude Indicator</tooltip-id>
                <label>Pitch: %3d°</label>
                <property>orientation/pitch-deg</property>
            </binding>
        </hovered>
    </animation>
    
    <animation>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <not>
                <property>ja37/elec/dc-bus-main-bool</property>
            </not>
        </condition>
    </animation>

    <animation>
        <type>material</type>
        <object-name>sphere</object-name>
        <object-name>bank-index</object-name>
        <object-name>off</object-name>
        <object-name>level</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>sphere</object-name>
        <condition>
            <property>ja37/elec/dc-bus-main-bool</property>
        </condition>
        <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
        <center>
            <x-m>-0.02692</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>sphere</object-name>
        <condition>
            <property>ja37/elec/dc-bus-main-bool</property>
        </condition>
        <property>instrumentation/attitude-indicator/indicated-pitch-deg</property>
        <center>
            <x-m>-0.02692</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>sphere</object-name>
        <condition>
            <property>ja37/elec/dc-bus-main-bool</property>
        </condition>
        <property>instrumentation/heading-indicator/indicated-heading-deg</property>
        <factor>-1</factor>
        <center>
            <x-m>-0.02692</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>bank-index</object-name>
        <condition>
            <property>ja37/elec/dc-bus-main-bool</property>
        </condition>
        <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
        <axis>
            <x>1</x>
        </axis>
    </animation>

	<!--glideslope and heading indicator-->
    
    <animation>
        <type>select</type>
        <object-name>glideslopeIndicator</object-name>
        <condition>
            <property>/ja37/hud/TILS-on</property>
            <property>instrumentation/nav[0]/gs-in-range</property>
            <property>instrumentation/nav[0]/has-gs</property>
        </condition>
    </animation>
    
    <animation>
        <type>select</type>
        <object-name>headingIndicator</object-name>
        <condition>
            <property>/ja37/hud/TILS-on</property>
        </condition>
    </animation>
    
	<animation>
		<type>translate</type>
		<object-name>headingIndicator</object-name>
		<property>instrumentation/radio/heading-indicator-norm</property>
		<factor>.0175</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>glideslopeIndicator</object-name>
		<property>instrumentation/nav/gs-needle-deflection-norm</property>
		<factor>.0175</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	
</PropertyList>
