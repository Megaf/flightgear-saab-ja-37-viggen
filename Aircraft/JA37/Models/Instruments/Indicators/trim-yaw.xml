<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

    <path>trim-yaw.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>MountLight</object-name>
    </effect>
    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>Glass</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>Light</object-name>
        <emission>
            <red>1</red>
            <green>1</green>
            <blue>1</blue>
            <factor-prop>/instrumentation/indicators/yaw-trim-centered</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>MountLight</object-name>
        <object-name>Glass</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>rtc</tooltip-id>
                <label>Yaw trim indicator</label>
            </binding>
        </hovered>
    </animation>

</PropertyList>
