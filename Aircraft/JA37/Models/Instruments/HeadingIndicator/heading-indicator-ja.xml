<PropertyList>

    <path>heading-indicator-ja.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>
    
    <effect>
        <inherits-from>noshadow</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
    </effect>
    
    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-gauge</inherits-from>
        <object-name>needle</object-name>
        <object-name>needle_target</object-name>
        <object-name>off</object-name>
        <object-name>latClose</object-name>
        <object-name>arrow</object-name>
        <object-name>needleMount</object-name>
    </effect>
        
    <!--<effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-gauge-transparent</inherits-from>
        <object-name>dial</object-name>        
    </effect>-->

    <animation>
        <type>rotate</type>
        <object-name>dial</object-name>
        <object-name>needle</object-name>
        <object-name>needle_target</object-name>
        <property>instrumentation/heading-indicator/ja-indicated-heading-deg</property>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <factor>-1</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <property>ja37/avionics/heading-indicator-bug</property>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle_target</object-name>
        <property>ja37/avionics/heading-indicator-target</property>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <not>
                <property>ja37/elec/ac-bus-main-bool</property>
            </not>
        </condition>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>glass</object-name>
        <object-name>mount</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>ADI</tooltip-id>
                <label>Heading: %3d</label>
                <property>instrumentation/heading-indicator/ja-indicated-heading-deg</property>
            </binding>
        </hovered>
    </animation>

    <!-- lighting -->
    <animation>
        <object-name>needle</object-name>
        <object-name>needle_target</object-name>
        <object-name>dial</object-name>
        <object-name>arrow</object-name>
        <object-name>off</object-name>
        <type>material</type>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>


</PropertyList>
