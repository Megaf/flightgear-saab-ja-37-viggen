    <empty>
      <row>0</row>
      <col>18</col>
      <rowspan>12</rowspan>
      <width>10</width>
    </empty>

    <!-- bottom load/save buttons -->

    <group>
      <row>11</row>
      <col>6</col>
      <layout>hbox</layout>

      <button>
        <legend>Load</legend>
        <equal>true</equal>
        <binding>
          <command>nasal</command>
          <script>load_selector.open()</script>
        </binding>
      </button>
      <button>
        <legend>Save</legend>
        <equal>true</equal>
        <binding>
          <command>nasal</command>
          <script>save_selector.open();</script>
        </binding>
      </button>
    </group>

  </group>

  <empty>
    <height>10</height>
