<?xml version="1.0"?>
<PropertyList>
  <name>faf</name>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>
    <empty><stretch>1</stretch></empty>

    <text>
      <label>Friends (IFF)</label>
    </text>

    <empty><stretch>1</stretch></empty>

    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>nasal</command>
        <script>faf.Dialog.close();</script>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <text>
    <label>The following callsigns will be displayed as friendly,</label>
    <halign>left</halign>
  </text>
  <text>
    <label>by a cross on the radar and MI, and in green on the TI.</label>
    <halign>left</halign>
  </text>
  <text>
    <label>This is in addition to identification by IFF code</label>
    <halign>left</halign>
  </text>
  <text>
    <label>(identification transponder, on the rear right panel).</label>
    <halign>left</halign>
  </text>

  <!-- This table is filled in Nasal/radar/faf.nas -->
  <group>
    <name>procedural_table</name>
    <layout>table</layout>

    <empty>
      <row>0</row>
      <col>0</col>
      <width>20</width>
    </empty>
    <empty>
      <row>0</row>
      <col>2</col>
      <width>30</width>
    </empty>
    <empty>
      <row>0</row>
      <col>4</col>
      <width>20</width>
    </empty>
  </group>

  <empty>
    <height>10</height>
  </empty>
</PropertyList>
